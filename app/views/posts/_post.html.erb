<div class="card mb-3">
  <div class="card-body">
    <p class="card-text"><%= post.content %></p>
    <%= link_to 'Show', post, class: "btn btn-outline-primary" %>
    <%= link_to 'Edit', edit_post_path(post), class: "btn btn-outline-primary" %>
    <%= link_to  post, class: "btn btn-outline-danger", method: :delete, remote: true do %>
      <span class="align-middle btn-outline-dangers">Delete</span>      
    <% end %>      

    
     <div class="rightstage">
      <small class="text-primary rightstage">
      <%= post.created_at.strftime('%Y/%m/%d') %>
      </small>
     </div>
  </div>
</div>